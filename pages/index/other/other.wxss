/* pages/index/other/other.wxss */

.panne{
  width:100%;
  height:120px;
  padding:10px 0;
  clear:both;
  border-bottom:1px solid #eee;
}
.panne_left{
  float:left;
  width: 30%;
}
.panne_left image{
  width:90%;
  height:120px;
}
.panne_middle{
  float:left;
  width: 50%;
  font-size: 14px;
}
.panne_title{
  height:45px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price_desc{
  line-height:25px;
  color:grey;
}
.discount_desc{
  color:grey;
  font-size: 16px;
}
.discount_price{
  color:black;
  font-weight: 600;
  font-size: 16px;
  display:inline;
}
.stock_desc{
  background:orange;
  border:1px solid orange;
  border-radius: 10px;
  color:white;
  height:20px;
  line-height: 20px;
  padding-left:5px;
  width: 50%;
}
.panne_right{
  float:left;
  width: 20%;
  font-size: 15px;
  text-align: center;
  color:orangered;
}
.panne_right image{
  width:50%;
  height: 40px;
  padding-top:25px;
}
