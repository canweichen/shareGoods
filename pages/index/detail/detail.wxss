/* pages/index/detail/detail.wxss */
.empty_body{
  background:#eee;
  height:10px;
}

.goods_title{
  font-size: 16px;
  padding: 0 2%;
  height: 50px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.qprice{
  padding-left: 2%;
  color: orangered;
}
.qborder{
  display: inline-block;
  width: 15%;
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  border: 1px solid orangered;
  text-align: center;
}
.sale_price{
  display: inline-block;
  width: 25%;
  text-align: center;
  font-size: 20px;
}
.org{
  display: inline-block;
  width: 40%;
  font-size:16px;
  color:grey;
}
.already{
  display: inline-block;
  text-align: right;
  width: 50%;
  font-size: 16px;
  color:grey;
}
.qdetail{
  padding: 3px 2%;
  background: rgba(236, 231, 231, 0.1);
  font-size: 15px;
}
.text_color{
  color: orangered;
}
.other_title{
  color:orangered;
  text-align: center;
  line-height: 30px;
  height: 30px;
  padding: 3px 0;
  letter-spacing: 3px;
}

.panne{
  width:100%;
  height:120px;
  padding:10px 0;
  clear:both;
  border-bottom:1px solid #eee;
}
.panne_left{
  float:left;
  width: 30%;
}
.panne_left image{
  width:90%;
  height:120px;
}
.panne_middle{
  float:left;
  width: 50%;
  font-size: 14px;
}
.panne_title{
  height:45px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price_desc{
  line-height:25px;
  color:grey;
}
.discount_desc{
  color:grey;
  font-size: 16px;
}
.discount_price{
  color:black;
  font-weight: 600;
  font-size: 16px;
  display:inline;
}
.stock_desc{
  background:orange;
  border:1px solid orange;
  border-radius: 10px;
  color:white;
  height:20px;
  line-height: 20px;
  padding-left:5px;
  width: 50%;
}
.panne_right{
  float:left;
  width: 20%;
  font-size: 15px;
  text-align: center;
  color:orangered;
}
.panne_right image{
  width:50%;
  height: 40px;
  padding-top:25px;
}
.empty_botton{
  text-align:center;
  height:30px;
  line-height:30px;
  font-size:14px;
  background: #eee;
  padding-bottom: 60px;
}
.fixed_share{
  position: fixed;
  width: 100%;
  height: 50px;
  right: 0;
  left: 0;
  bottom: 0;
  text-align: center;
  line-height: 50px;
  background: rgb(228, 47, 15); 
  color: white;
  letter-spacing: 3px;
  font-size: 18px;
}
.qdetai-price{
  height:30px;
  line-height:30px;
}
.big-img{
  width:100%;
  height:320px;
}
.small-img{
  width:20px;
  height:20px;
  vertical-align:middle;
}